(in-package :stumpwm)


;; Load swank.
(require 'swank)
(swank:create-server)


(defparameter WEB-BROWSER "exec google-chrome"
  "Set default web browser")

(setf *shell-program* (stumpwm:getenv "SHELL"))


(set-prefix-key (kbd "C-q"))


;; Keybindings
;; ------------

(defparameter X-TERM "exec gnome-terminal"
"X-TERM command definition so we can launch a terminal emulator")

(define-key *root-map* (kbd "t") X-TERM)
(define-key *root-map* (kbd "e") "emacs-snapshot")
(define-key *root-map* (kbd "g") "google-chrome")

;; Windows
;; --------

(clear-window-placement-rules)
